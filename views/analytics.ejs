<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <title>URL Analytics</title>
  </head>
  <body class="bg-dark text-white">
    <div class="container py-5">
      <h1 class="text-center mb-4">Analytics of Your URL</h1>
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <div class="alert alert-light text-dark">
            <div class="row">
              <div class="col-md-6">
                <p class="mb-0">Original URL:</p>
                <a
                  class="mb-0 text-decoration-none text-danger"
                  href="<%= url.redirectURL %>"
                  target="_blank"
                  ><%= url.redirectURL %></a
                >
              </div>
              <div class="col-md-6">
                <p class="mb-0">Shortened URL:</p>
                <a
                  class="mb-0 text-decoration-none text-danger"
                  href="<%= process.env.BASE_URL + '/' + url.shortID %>"
                  target="_blank"
                  ><%= process.env.BASE_URL + '/' + url.shortID %></a
                >
              </div>
            </div>

            <div class="table-responsive">
              <table class="table table-striped table-dark">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Timestamps</th>
                    <th scope="col">IP Address</th>
                  </tr>
                </thead>
                <tbody>
                  <% url.visitHistory.forEach(function(item, index) { %>
                  <tr>
                    <th scope="row"><%= index + 1 %></th>
                    <td><%= item.timestamp %></td>
                    <td><%= item.IP %></td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <a
      href="https://github.com/ChinnaDevelopers/URL-Shortener"
      target="_blank"
      style="position: fixed; right: 50px; bottom: 20px; color: white"
    >
      <i class="fab fa-github fa-3x"></i>
    </a>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
